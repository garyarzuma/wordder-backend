    "google-auth-library": "^7.14.0",
    "jsonwebtoken": "^8.5.1",
    "mkcert": "^1.5.0",
    "mongoose": "^6.2.4",
    "mongoose-unique-validator": "^3.0.0"
  },
  "devDependencies": {
    "dotenv": "^16.0.0",
    "nodemon": "^2.0.15"
  }
